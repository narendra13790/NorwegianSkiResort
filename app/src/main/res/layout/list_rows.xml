<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/list_selector"
    >

    <TextView
        android:id="@+id/resort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Resort Name"
        />

    <TextView
        android:id="@+id/slope_sub_title"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resort_title"
        android:text=" Slope:  23 KM "
        />

    <TextView
        android:id="@+id/slope_sub_lifts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/slope_sub_title"
        android:layout_alignTop="@+id/slope_sub_title"
        android:paddingLeft="60dp"
        android:text="Lift: 4 "
        />

    <TextView
        android:id="@+id/slope_sub_charges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_toRightOf="@+id/slope_sub_lifts"
        android:layout_alignTop="@+id/slope_sub_title"
        android:text="Charges: 4 "
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>