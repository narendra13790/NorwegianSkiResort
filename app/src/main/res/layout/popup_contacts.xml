<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_white_24dp"
            android:background="@drawable/circle_background_pink"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/rd_address"
            android:background="@color/lightGrey"></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Telephone Number"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            />


        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="13234324324"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Address"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <View
                android:id="@+id/viewborder"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/address"
                android:background="@color/lightGrey"></View>



            <TextView
                android:id="@+id/addressLine1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address1"
                android:layout_gravity="start"
                android:layout_below="@+id/viewborder"
                />

            <TextView
                android:id="@+id/addressLine2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addressLine2"
                android:layout_gravity="start"
                android:layout_below="@+id/addressLine1"
                />


            <TextView
                android:id="@+id/addressLine3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addressLine2"
                android:layout_gravity="start"
                android:layout_below="@+id/addressLine2"
                />

            <TextView
                android:id="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_gravity="start"
                android:layout_below="@+id/addressLine3"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>